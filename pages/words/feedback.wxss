
.textarea_box{
  width: 100%;
  padding: 40rpx;
}
.textarea_length{
  text-align: right;
}

.label{
  margin-bottom: 20rpx;
}

input{
  margin-bottom: 40rpx;
}

.btn{
  width: 100%;
  height:88rpx;
  font-size: 32rpx;
  color: RGBA(255, 255, 255, 1);
  display: flex;
  padding: 0;
  align-items: center;
  justify-content: center;
  border-radius: 5rpx;
  background-color: RGBA(174, 156, 128, 1);
}



.push_imgs{
  margin-top: 160rpx;
  border-bottom: 2rpx solid #F7F7F7;
  padding: 0 60rpx 30rpx;
}


.upload-box{
  font-size: 0;
}
.upload-list{
  margin-right: 14rpx;
  width: 200rpx;
  height: 200rpx;
  position: relative;
  display: inline-block;
}

.upload-list image{
  display: block;
  width: 100%;
  height: 100%;
}
.upload-list:nth-child(3n){
  margin-right: 0;
}
.upload-list-m-b{
  margin-bottom: 10rpx;
  vertical-align: top;
}

.upload-list .close{
  position: absolute;
  right: -15rpx;
  top: -15rpx;
  width: 30rpx;
  height: 30rpx;
  z-index: 10;
}

.add{
  width: 200rpx;
  height: 200rpx;
  display: inline-block;
  background: #D8D8D8;
  position: relative;
}
.add .horizontal{
  position: absolute;
  width: 64rpx;
  height: 6rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
}
.add .vertical{
  position: absolute;
  width: 6rpx;
  height: 64rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
}