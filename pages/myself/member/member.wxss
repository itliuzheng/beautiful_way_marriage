page{
  background: #F7F7F7;
}
.banner image{
  width: 100%;
  height: 260rpx;
  display: block;
}
.content{
  padding: 28rpx 50rpx 0;
}
.title{
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:bold;
  color:rgba(196,171,91,1);
  line-height:44rpx;
  margin-bottom: 40rpx;
}
.buy-box{
  width: 100%;
  /* height:726rpx; */
  padding: 40rpx 30rpx 0;
  background:rgba(255,255,255,1);
  box-shadow:0px 4px 8px 0px rgba(0,0,0,0.3);
  border-radius:20px;
  margin-bottom: 20rpx;
  padding-bottom: 60rpx;
}

.buy-list{
  height: 96rpx;
  line-height: 96rpx;
  overflow: hidden;
  border-bottom: 4rpx solid #F7F7F7;
}
.buy-lis text{
  font-size: 32rpx;
  color: #2B2B2B;
}
.buy-list .name{
  margin-right: 30rpx;
  font-weight: bold;
}
.buy-list .day,.day_amount{
  font-size: 24rpx;
  color: #888888;
  margin-right: 10rpx;
}
.buy-list .amount{
  margin-right: 40rpx;
}
.buy-list .active_icon{
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #D2D2D2;
  border-radius: 50%;
  display: inline-block;
  vertical-align: middle;
}
.buy-list.active .amount{
  color: #C4AB5B;
}
.buy-list.active .active_icon{
  background: url(data:image/png;base64,) no-repeat center;
  background-size: 100%;
  border-color: transparent;
}

.time_end{
  font-size: 28rpx;
  color: #C4AB5B;

}
.btn{
  width:480rpx;
  height:80rpx;
  line-height:80rpx;
  margin: 58rpx auto 0;
  text-align: center;
  background:rgba(196,171,91,1);
  border-radius:10rpx;
  font-size:32rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);

}

.vip-box .desc{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(43,43,43,1);
  line-height:40rpx;
  text-align: justify;
}


.vip-box-list{
  border-bottom: 4rpx solid #f7f7f7;
  overflow: hidden;
  height: 128rpx;
}
.list_icon{
  margin-right: -100%;
  width: 70rpx;
  height: 70rpx;
  margin-top: 20rpx;
}
.list-name{
  margin-left: 100rpx;
}
.name_title{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(43,43,43,1);
  line-height:40rpx;
  margin-top: 26rpx;
}
.name_desc{
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(136,136,136,1);
  line-height:34rpx;
}