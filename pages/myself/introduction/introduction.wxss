/* pages/myself/introduction/introduction.wxss */
page{
  background: #F7F7F7;
}
.content-topic{
  height: 424rpx;
  width: 100%;
  position: relative;
}
.modify_photo{
  width: 200rpx;
  height: 58rpx;
  position: absolute;
  right: 40rpx;
  bottom: 20rpx;
  border-radius: 10rpx;
  background: rgba(0,0,0,0.8);
  color: #fff;
  font-size: 24rpx;
  line-height: 58rpx;
  text-align: center;
}
.header_bj{
  background: #ddd;
  width: 100%;
  height: 100%;
}
.header_bj image{
  height: 100%;
  width: 100%;
}

.section{
  padding-bottom: 40rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.nav_head{
  padding: 20rpx 40rpx 0;
  border-bottom: 2px solid #F7F7F7;
  height: 104rpx;
}
.nav_head .fl{
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(196,171,91,1);
  line-height:84rpx;
}
.nav_head .fr{
  font-size:24rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:400;
  color:#7E7E7E;
  line-height:84rpx;
}
.list{
  height: 100rpx;
  border-bottom: 2px solid #F7F7F7;
  padding:0 40rpx;
}
.list .fl{
  font-size: 32rpx;
  line-height: 100rpx;
  color: #2B2B2B;
}
.list .fr{
  font-size: 28rpx;
  line-height: 100rpx;
  color: #888;
}

.section-content{
  width:670rpx;
  height:186rpx;
  margin: 38rpx auto 0;
  background:rgba(247,247,247,1);
  border-radius:10rpx;
  border:2rpx dashed rgba(151,151,151,1);
  text-align: center;

}
.absolute-center{
  position: relative;
  top: 50%;
  transform: translate(0,-50%);
}
.section-content .add_icon{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(126,126,126,1);
  line-height:40rpx;
}
.section-content .add_icon::before{
  content:'';
  display: inline-block;
  vertical-align: top;
  margin-right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  background: url('data:image/png;base64,') no-repeat center;
  background-size: 100%;
}
.section-content .add_desc{
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(179,179,179,1);
  line-height:34rpx;
  margin-top: 20rpx;
}
.show-tag{
  padding: 30rpx 40rpx 0;
}
.show-tag .tag{
  display: inline-block;
  font-size:24rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(136,136,136,1);
  line-height:34rpx;
  padding: 14rpx 20rpx;
  background:rgba(247,247,247,1);
  border-radius:10rpx;
  border:2rpx solid rgba(151,151,151,1);
  margin-right: 30rpx;
  margin-bottom: 20rpx;
}
.section-show{
  padding: 20rpx 40rpx 0;
}
.section-show .show-text{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(182,182,182,1);
  line-height:40rpx;
}


.upload-box{
  font-size: 0;
  padding: 20rpx 40rpx 0;
}
.upload-list{
  margin-right: 10rpx;
  width: 160rpx;
  height: 160rpx;
  position: relative;
  display: inline-block;
}
.upload-list image{
  display: block;
  width: 100%;
  height: 100%;
}
.upload-list:nth-child(4n){
  margin-right: 0;
}


.upload-list-m-b{
  margin-bottom: 20rpx;
  vertical-align: top;
}

.add{
  width: 160rpx;
  height: 160rpx;
  display: inline-block;
  background: #D8D8D8;
  position: relative;
}
.add .horizontal{
  position: absolute;
  width: 64rpx;
  height: 6rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
}
.add .vertical{
  position: absolute;
  width: 6rpx;
  height: 64rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
}



.maskCode{
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}
.toast_centerCode{
  position: relative;
  width: 686rpx;
  height: 678rpx;
  border-radius:10rpx;
  background-color: rgba(255, 255, 255, 1);
  box-sizing: border-box;
  padding:60rpx 40rpx 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.toat_mainCode{
    width: 100%;
  height: 400rpx;
  display: flex;
  font-size:28rpx;
  color: RGBA(153, 153, 153, 1);
}
.toat_main{
  width: 100%;
  height: 220rpx;
  display: flex;
  align-items: center;
  justify-content:center;
  font-size:32rpx;
  color: RGBA(0, 0, 0, 1);
}
.toat_yes{
  width: 100%;
  height:88rpx;
  font-size: 32rpx;
  color: RGBA(255, 255, 255, 1);
  display: flex;
  padding: 0;
  align-items: center;
  justify-content: center;
  border-radius: 5rpx;
  background-color: RGBA(174, 156, 128, 1);
}
.toat_no{
  color: RGBA(174, 156, 128, 1);
  background: RGBA(255, 255, 255, 1);
}
