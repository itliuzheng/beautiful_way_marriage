<!--pages/home/index.wxml-->
<view class="home">
  <navigator class="search-box" url="/pages/home/search/search">
    <text class="search-icon"></text>
    <text class="search-line"></text>
    <text class="search-text">自定义筛选</text>
  </navigator>
  
  <view class="page-body">
    <view class="page-section rc_swiper">
      <swiper style="height:258rpx;" indicator-dots="{{true}}" indicator-color="rgba(0,0,0,0.3)" indicator-active-color="#fff" autoplay="{{true}}" interval="3000">
        <block wx:for="{{home.banner}}" wx:key="unique">
          <swiper-item>
            <view class="swiper-item">
              <image src="{{item.imgUrl}}" mode="aspectFill"></image>
            </view>
          </swiper-item>
        </block>
      </swiper>
    </view>
  </view>
  <view class="nav-box">
    <view class="nav-list" bindtap="not_open_yet">
      <image src="/images/home/nav_icon_01.png"></image>
      <view class="name">MITU课堂</view>
    </view>
    <view class="nav-list nav-list-center " bindtap="not_open_yet">
      <image src="/images/home/nav_icon_02.png"></image>
      <view class="name">导师直播</view>
    </view>
    <view class="nav-list nav-list-center" bindtap="not_open_yet">
      <image src="/images/home/nav_icon_03.png"></image>
      <view class="name">文章精选</view>
    </view>
    <view class="nav-list " bindtap="not_open_yet">
      <image class="fr" src="/images/home/nav_icon_04.png"></image>
      <view class="name fr">交友专区</view>
    </view>
  </view>
  <view class="rc_news" wx:if="{{home.topUser.length}}">
    <view class="news-title">我要置顶</view>
    <scroll-view scroll-x class="scroll-x">
      <view wx:for="{{home.topUser}}" wx:key="{{index}}" wx:key="unique" class="view-parent" wx:if="{{item.top == 1}}">
        <navigator  url="/pages/introduction/introduction?id={{item.id}}">
          
          <view class="stick-card-list">
            <image class="stick-img" src="{{item.imageUrl}}" mode="aspectFill"></image>
            <view class="card-content">
              <view class="card-head">
                <text class="name">{{item.realName}}</text>
                <text class="lz-icon {{item.userAuth == 1?'icon-certified':'icon-not-certified'}}"></text>
              </view>
              <view class='name_other'>
                <text>{{item.age}}岁</text>
                <text>|</text>
                <text>{{item.height}}cm</text>
              </view>
            </view>
          </view>
        </navigator>

      </view>
    </scroll-view>
  </view>

  <view class="title-box" wx:if="{{home.recommendUser.length}}">
    <view class="title">每日推荐</view>
  </view>
  <view class="recommend-list" wx:for="{{home.recommendUser}}" wx:key="unique" wx:if="{{item.recommend == 1}}">
    <navigator url="/pages/introduction/introduction?id={{item.id}}">
      <view class="list-bj">
        <image src="{{item.imageUrl}}" mode="aspectFill"></image>
        <view class="certification_tag">
          <text class="icon_ver "></text>
          <text>{{item.userAuth == 1?'已认证':'未认证'}}</text>
          <text>{{item.userAuth?'身份':''}}{{item.educationAuth?'-学历':''}}{{item.houseAuth?'-房':''}}{{item.carAuth?'-车':''}}</text>
        </view>
        <!-- <view class="certification_tag exchange_wx">
          <text class="icon_wx"></text>
          <text>交换微信</text>
        </view> -->
      </view>
      <view class="card-content">
        <view class='move_title'>{{item.realName}}
          <text class="lz-icon {{item.userAuth == 1?'icon-certified':'icon-not-certified'}}"></text>
          <view class='move_miniTitle'>期待两年内结婚</view>
        </view>
        <view class='name_other'>
          <text>{{item.age}}岁</text>
          <text>|</text>
          <text>{{item.height}}cm</text>
          <!-- <text>|</text>
          <text>老师</text> -->
          <text>|</text>
          <text>{{annualIncomeArray[item.annualIncome]}}</text>
        </view>
        <view class="name_introduct">{{item.selfIntroduce}}</view>
        <view class="go_more" wx:if="{{item.selfIntroduce}}">全文</view>
      </view>
    </navigator>
  </view>

</view>

<myToast noCode="{{noCode}}" step="{{info}}"></myToast>