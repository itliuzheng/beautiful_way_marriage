.friends-box{
  padding: 40rpx;
}

.friends{
  width: 100%;
  height: 300rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.friends image{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
}
.content{
  position: relative;
  z-index: 2;
  padding-top: 128rpx;
}

.title{
  width: 376rpx;
  margin: 0 auto;
  position: relative;
}
.title::before{
  content:'';
  width: 60rpx;
  height: 4rpx;
  background: #fff;
  display: block;
  float: left;
}
.title::after{
  content:'';
  width: 60rpx;
  height: 4rpx;
  background: #fff;
  display: block;
  float: right;
}
.title text{
  width: 256rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: block;
  background: transparent;
  font-size: 44rpx;
  color: #FFFFFF;
  position: absolute;
  left: 70rpx;
  top: -30rpx;
  text-align: center;
}
.desc{
  color: #FFD755;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
  margin-top: 32rpx;
}