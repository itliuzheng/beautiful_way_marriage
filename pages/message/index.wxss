
.list-cell{
  height: 140rpx;
  line-height: 140rpx;
  background: #fff;
  border-bottom: 4rpx solid #F7F7F7;
  padding:0 40rpx;
  position: relative;
}
.list-cell:before{
  content: "";
  position: absolute;
  right: 40rpx;
  top: 0;
  width: 24rpx;
  height: 100%;
  background: url("data:image/png;base64,") no-repeat center;
  background-size: 100% 44rpx;
}
.list-cell-no_arrow:before{
  background: none;
}
.list-cell text{
  font-size: 32rpx;
  color: #2B2B2B;
  font-weight: 400;
}
.icon{
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 20rpx;
}