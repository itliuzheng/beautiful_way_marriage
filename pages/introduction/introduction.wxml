<view class="content-box">
  <view class="content-topic">
    <view class="header_bj">
      <image src="/images/myself/banner.png" mode="aspectFill"></image>
    </view>
    <view class="header_mask">
      <view class="mask_list">
        <image class="mask_icon" src="/images/introduction/love.png"></image>
        <text>心动</text>
      </view>
      <view class="mask_list">
        <image class="mask_icon_message" src="/images/introduction/message.png"></image>
        <text>聊天</text>
      </view>
    </view>
  </view>
  <view class="section">
    <view class="card-content">
      <view class='move_title'>苏菀菁
        <text class="lz-icon {{true?'icon-certified':'icon-not-certified'}}"></text>
        <view class='move_miniTitle'>期待两年内结婚</view>
      </view>
      <view class='name_other'>
        <text>26岁</text>
        <text>|</text>
        <text>180cm</text>
        <text>|</text>
        <text>老师</text>
        <text>|</text>
        <text>2000～3000</text>
        <view class="fr address">
          <image src="/images/introduction/address.png"></image>
          <text class="address_desc">濮阳</text>
        </view>
      </view>
    </view>
  </view>
  <view class="section">
    <view class="detail clearfix">
      <view class="detail_type fl">
        <image src="/images/introduction/big_icon_01.png"></image>
        <view class="detail_name">TA的动态</view>
      </view>
      <view class="detail_type fl">
        <image src="/images/introduction/big_icon_02.png"></image>
        <view class="detail_name">帮我约TA</view>
      </view>
    </view>
  </view>
  <view class="section">
    <view class="nav_head">
      <text class="fl">个人相册</text>
    </view>
    <view class="upload-box">
      <view class="upload-list upload-list-m-b" wx:for="{{upload_list}}" wx:key="{{index}}">
        <image src="/images/introduction/photo.png"></image>
      </view>
      <view class="upload-list upload-list-m-b ">
        <image src="/images/introduction/photo.png"></image>
        <view class="upload-list-more" bindtap="goMorePhoto">
          <view class="number">+3</view>
          <view class="more">查看更多></view>
        </view>
      </view>
    </view>
  </view>
  <view class="section">
    <view class="nav_head">
      <text class="fl">已认证信息</text>
    </view>
    <view class="list" bindtap="clickShow">
      <text class="fl">身份证认证</text>
      <text class="fr">张**</text>
    </view>
    <view class="ver_show" style="height:{{ver_height}}rpx">
