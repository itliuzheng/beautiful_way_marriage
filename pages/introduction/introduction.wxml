      <text class="fl">未认证信息</text>
    </view>
    <view class="list">
      <text class="fl">学历认证</text>
      <text class="fr">未认证</text>
    </view>
    <view class="list">
      <text class="fl">资产认证-房</text>
      <text class="fr">未认证</text>
    </view>
    <view class="list">
      <text class="fl">资产认证-车</text>
