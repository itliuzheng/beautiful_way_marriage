page{
  background: #F7F7F7;
}
.home{
  /* background: #fff; */
  /* min-height:1000rpx; */
  height: 100%;
  /* background-image: linear-gradient(180deg, #fff 5%,#f1f0f5 95%); */
  padding: 40rpx 40rpx;
}

.rc_swiper swiper{
  height: 258rpx;
}
.swiper-item{
  width: 100%;
  height: 258rpx;
}
.swiper-item image{
  height: 100%;
  width: 100%;
  display: block;
}

.rc_news{
  padding: 0 10rpx;
  width:100%;
  height:406rpx;
  background:rgba(255,255,255,1);
  padding-top: 18rpx;
}
.rc_news .news-title{
  font-size:32rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(194,167,83,1);
  line-height:44rpx;
  margin-bottom: 20rpx;
}


.scroll-x{
  height:306rpx;
  white-space:nowrap;
  display:flex;
}
/* 隐藏scrollbar */
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}
.view-parent{
    display:inline-block;
    margin-right: 14rpx;
}
.stick-card-list{
  width:208rpx;
  height:306rpx;
  background: #fff;
}
.stick-card-list .stick-img{
  width: 208rpx;
  height: 200rpx;
  background: #000; 
  display: block;
}
.stick-card-list .card-content{
  padding:8rpx 10rpx;
  border:2rpx solid rgba(247,247,247,1);
}
.card-content .name{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:40rpx;
}
.card-content .name_other {
  font-size: 24rpx;
  color: #888888;
  margin-top: 12rpx;
}
.name_other text{
  margin-right: 10rpx;
}

.title-box{
  width: 100%;
  height: 94rpx;
  background: #fff;
  padding: 30rpx 0 0 10rpx;
  margin-top: 20rpx;
}
.title-box .title{
  font-size:32rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(194,167,83,1);
  line-height:44rpx;
}

.recommend-list{
  width: 100%;
}
.recommend-list .list-bj{
  width: 100%;
  height: 400rpx;
  position: relative;
}
.list-bj image{
  display: block;
  width: 100%;
  height: 400rpx;
  background: red;
}
.list-bj .certification_tag{
  padding: 0 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 20rpx;
  color: #fff;
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  background:rgba(38,39,40,0.8);
  border-radius: 20rpx;
}
.list-bj .exchange_wx{
  left: auto;
  top: auto;
  right: 20rpx;
  bottom: 20rpx;
}
.certification_tag text{
  margin-left: 20rpx;
}